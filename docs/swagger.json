                },
                "message": {
                    "type": "string"
                },
                "result": {}
            }
        },
        "httpserver.AddUserRequest": {
            "type": "object",
            "required": [
                "email",
                "name",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "maxLength": 255
                },
                "name": {
